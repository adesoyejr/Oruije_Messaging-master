<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/OruijeBlue</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/OruijeBlue</item>
        <item name="colorAccent">@color/OruijeBlue</item>
        <item name="actionMenuTextColor">@color/OruijeBlue</item>
        <item name="actionBarDivider">@color/OruijeGray</item>
        <item name="android:actionModeBackground">@color/white</item>
        <!--<item name="android:textColor">@color/OruijeBlue</item>-->
        <item name="actionBarItemBackground">@color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/red</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="settingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@color/OruijeBlue</item>
        <item name="actionBarDivider">@color/OruijeGray</item>
        <item name="colorPrimaryDark">@color/OruijeBlue</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/OruijeBlue</item>
        <item name="colorAccent">@color/OruijeBlue</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/OruijeBlue</item>
    </style>

    <style name="more" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/OruijeBlue</item>
        <item name="actionModeBackground">@color/OruijeBlue</item>
        <item name="actionModeCloseDrawable">@color/OruijeBlue</item>
        <item name="actionBarDivider">@color/OruijeGray</item>
        <item name="actionMenuTextColor">@color/OruijeBlue</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/OruijeBlue</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="uneditable" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#FFAAAAAA</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/OruijeGray</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
